# ============================================
# Planovate Backend - PRODUCTION Configuration
# Use this as reference for production deployment
# ============================================

# Environment
ENVIRONMENT=production
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000

# Security - Allowed hosts (Railway/Render will provide these)
# Example: your-app.up.railway.app
ALLOWED_HOSTS=planovate-production.up.railway.app

# CORS - Your frontend production URLs
ALLOWED_ORIGINS=https://planovate-iota.vercel.app,https://planovate.vercel.app,https://www.planovate.com

# Uploads
MAX_IMAGE_SIZE_MB=10
REQUEST_TIMEOUT=30

# LLM Provider
LLM_PROVIDER=gemini
LLM_TIMEOUT=12

# Gemini API (REQUIRED for production)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_production_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash

# OpenAI (if using instead of Gemini)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Logging
LOG_LEVEL=INFO
